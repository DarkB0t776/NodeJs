<h1>Add course</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" value="{{data.title}}" required>
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" value="{{data.price}}" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" value="{{data.img}}" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary">Add Course</button>
</form>