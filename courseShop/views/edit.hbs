<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>

  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" value="{{course.price}}" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" value="{{course.img}}" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>

  <input type="hidden" name="id" value="{{course._id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course._id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button type="submit" class="btn red">Delete</button>
</form>